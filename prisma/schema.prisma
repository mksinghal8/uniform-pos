generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  name                  String
  userName              String   @unique
  hashedPassword        String
  role                  String?
}

model SalesRecord {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  products    Json 
  totalItems  Int
  discount    Float     
  totalAmount Float     
  salesMan    String    
  helper      String    
  type        String
  customer    Json
  paymentMode String    
}
